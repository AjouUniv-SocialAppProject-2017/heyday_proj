<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_click__All"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:text="전체"
            app:layout_constraintTop_toBottomOf="@+id/btn_click__Sport"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_click__Health"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:onClick="all"/>

        <Button
            android:id="@+id/btn_click__Hobby"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:text="이색취미"
            app:layout_constraintTop_toBottomOf="@+id/btn_click_Socity"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp"
            android:onClick="hobby"/>

        <Button
            android:id="@+id/btn_click__Sport"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:text="스포츠"
            app:layout_constraintTop_toBottomOf="@+id/btn_click__Art"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_click_Socity"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:onClick="sport"/>

        <Button
            android:id="@+id/btn_click_Socity"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="사회이슈"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_click__Computer"
            android:onClick="socity"/>

        <Button
            android:id="@+id/btn_click__Art"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:text="음악/미술"
            app:layout_constraintHorizontal_bias="0.928"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_click__Foregin"
            android:onClick="art"/>

        <Button
            android:id="@+id/btn_click__Computer"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:text="컴퓨터"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_click__Health"
            app:layout_constraintRight_toLeftOf="@+id/btn_click__Art"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:onClick="computer"/>

        <Button
            android:id="@+id/btn_click__Foregin"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:text="외국어"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginRight="-2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.921"
            app:layout_constraintLeft_toLeftOf="parent"
            android:onClick="foregin"/>

        <Button
            android:id="@+id/btn_click__Health"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="헬스/뷰티"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:onClick="health"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>