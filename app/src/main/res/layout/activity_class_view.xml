<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/class_image"
                android:src="@drawable/heyday"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/class_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="강의 제목"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/class_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="강의 내용"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/class_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="강의 지역"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/class_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="강의 시간"
                android:textSize="20dp"
                android:gravity="center"/>


            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/class_teacher"
                    android:src="@drawable/ic_developer_board_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/class_teacher_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="센세 이름"
                        android:gravity="center"
                        android:textSize="30dp"/>
                    <TextView
                        android:id="@+id/class_teacher_mail"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="센세 이메일"
                        android:gravity="center"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/class_in"
                android:src="@drawable/icon_class_in"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>

</ScrollView>
